<project name="PrinterJobExecutor" basedir="."  default="clean" xmlns:ivy="antlib:org.apache.ivy.ant">
    <property name="src" location="src" />
    <property name="bin" location="bin" />
    <property name="test.src" location="test/src" />
    <property name="test.bin" location="test/bin" />
    <property name="ivy.lib" location="lib"/>
    <property name="reports.test" value="test/reports" />

    <path id="classpath">
        <pathelement location="${bin}" />
        <pathelement location="${test.bin}" />
        <fileset dir="${ivy.lib}"/>
    </path>

    <target name="init">
        <mkdir dir="${bin}"/>
        <mkdir dir="${test.bin}"/>
        <mkdir dir="test/reports"/>
        <mkdir dir="${ivy.lib}"/>
    </target>

    <target name="resolve" depends="init"
            description="--> Download JAR files (listed in ivy.xml) to the 'lib' directory.">
        <ivy:retrieve/>
    </target>

    <target name="compile" depends="resolve">
        <javac srcdir="${src}" destdir="${bin}" includeAntRuntime="no">
            <classpath refid="classpath"/>
            <include name="edu/umb/cs680/hw06/ModelABC/PrinterJobExecutor.java"/>
        </javac>
        <javac srcdir="${src}" destdir="${bin}" includeAntRuntime="no">
            <classpath refid="classpath"/>
            <include name="edu/umb/cs680/hw06/ModelXYZ/PrinterJobExecutor.java"/>
        </javac>
        <javac srcdir="${test.src}" destdir="${test.bin}" includeAntRuntime="no">
            <classpath refid="classpath"/>
            <include name="edu/umb/cs680/hw06/ModelABC/PrinterJobExecutorTest.java"/>
        </javac>
        <javac srcdir="${test.src}" destdir="${test.bin}" includeAntRuntime="no">
            <classpath refid="classpath"/>
            <include name="edu/umb/cs680/hw06/ModelXYZ/PrinterJobExecutorTest.java"/>
        </javac>
    </target>

    <target name="test" depends="compile">
        <junitlauncher haltonfailure="true" printSummary="yes">
            <classpath refid="classpath"/>
            <testclasses outputdir="${basedir}/${reports.test}">
                <fileset dir="${test.bin}">
                    <include name="edu/umb/cs680/hw06/**/*Test.class"/>
                </fileset>
                <listener type="legacy-plain" sendSysOut="true" />
            </testclasses>
        </junitlauncher>
    </target>

    <target name="run" depends="test">
        <java classname="edu.umb.cs680.hw06.ModelABC.PrinterJobExecutor"
              classpathref="classpath"
              fork="true"/>
        <java classname="edu.umb.cs680.hw06.ModelXYZ.PrinterJobExecutor"
              classpathref="classpath"
              fork="true"/>
        <java classname="edu.umb.cs680.hw06.PrintingFramework.PrinterJobExecutor"
              classpathref="classpath"
              fork="true"/>
    </target>

    <target name="clean" depends="run">
        <delete includeemptydirs="true">
            <fileset dir="${bin}/edu/umb/cs680/hw06" includes="**/*"/>
            <fileset dir="${test.bin}/edu/umb/cs680/hw06" includes="**/*"/>
        </delete>
    </target>

</project>